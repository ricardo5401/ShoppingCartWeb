@model IEnumerable<ShoppingCartWeb.Models.OrderDetail>
@{
    ViewBag.Title = "Mis Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3>Mis Compras</h3>
<hr />

<table class="table">
    <thead>
        <tr>
            <td>NÂ° de orden</td>
            <td>Album</td>
            <td>Imagen</td>
            <td>Cantidad</td>
            <td>Precio</td>
            <td>Total</td>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model)
        {
            var album = @item.GetAlbum();
            var total = @item.Quantity * @item.UnitPrice;
            <tr>
                <td>@item.OrderId</td>
                <td>@album.Title</td>
                <td><img src="@album.AlbumArtUrl" style="width: 50px"/></td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@total</td>
            </tr>
        }
    </tbody>
</table>